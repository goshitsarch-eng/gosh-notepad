{
  "name": "gosh-notepad",
  "version": "3.0.0",
  "description": "Windows 95/98 Notepad Clone",
  "author": {
    "name": "Goshitsarch",
    "email": "goshitsarch@users.noreply.github.com"
  },
  "license": "MIT",
  "main": "electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/goshitsarch-eng/gosh-notepad-cloned"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "dev:ui": "vite",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "vite": "^7.3.1",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "98.css": "^0.1.20",
    "electron-updater": "^6.7.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
